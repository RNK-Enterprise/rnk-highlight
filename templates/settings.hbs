<form>
  <div class="form-group">
    <label for="glowEnabled">{{localize "RNKHIGHLIGHT.settings.glowEnabled"}}</label>
    <input type="checkbox" id="glowEnabled" name="glowEnabled" {{checked glowEnabled}}>
  </div>
  <div class="form-group">
    <label for="glowColor">{{localize "RNKHIGHLIGHT.settings.glowColor"}}</label>
    <input type="color" id="glowColor" name="glowColor" value="{{glowColor}}">
  </div>
  <div class="form-group">
    <label for="intensity">{{localize "RNKHIGHLIGHT.settings.intensity"}}</label>
    <input type="range" id="intensity" name="intensity" min="0" max="100" value="{{intensity}}">
    <span>{{intensity}}%</span>
  </div>
  <div class="form-group">
    <label for="size">{{localize "RNKHIGHLIGHT.settings.size"}}</label>
    <input type="range" id="size" name="size" min="0" max="50" value="{{size}}">
    <span>{{size}}px</span>
  </div>
  <div class="form-group">
    <label for="animation">{{localize "RNKHIGHLIGHT.settings.animation"}}</label>
    <input type="checkbox" id="animation" name="animation" {{checked animation}}>
  </div>
  <fieldset>
    <legend>{{localize "RNKHIGHLIGHT.settings.objectTypes"}}</legend>
    <div class="form-group">
      <label for="tokens">{{localize "RNKHIGHLIGHT.settings.tokens"}}</label>
      <input type="checkbox" id="tokens" name="tokens" {{checked tokens}}>
    </div>
    <div class="form-group">
      <label for="tiles">{{localize "RNKHIGHLIGHT.settings.tiles"}}</label>
      <input type="checkbox" id="tiles" name="tiles" {{checked tiles}}>
    </div>
    <div class="form-group">
      <label for="drawings">{{localize "RNKHIGHLIGHT.settings.drawings"}}</label>
      <input type="checkbox" id="drawings" name="drawings" {{checked drawings}}>
    </div>
    <div class="form-group">
      <label for="walls">{{localize "RNKHIGHLIGHT.settings.walls"}}</label>
      <input type="checkbox" id="walls" name="walls" {{checked walls}}>
    </div>
    <div class="form-group">
      <label for="lights">{{localize "RNKHIGHLIGHT.settings.lights"}}</label>
      <input type="checkbox" id="lights" name="lights" {{checked lights}}>
    </div>
  </fieldset>
</form>